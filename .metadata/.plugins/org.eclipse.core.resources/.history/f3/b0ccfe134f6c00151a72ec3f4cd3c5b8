import java.io.OutputStream;
import java.net.ServerSocket;
import java.net.Socket;
import java.lang.Thread;


public class Sender implements Runnable {
	public Sender(int _port) {
		port = _port;
		x = y = z = 0;
	}

	public void run()		
	{
		ServerMain.logger.WriteLine("Привет из побочного потока!");
		send();	
	}
	
	public void start()		
	{
		ServerMain.logger.WriteLine("start!");
	}

	public void Update(int _x, int _y, int _z) {
		x = _x;
		y = _y;
		z = _z;
	}
	
	public void DoSending() {
		ServerMain.logger.WriteLine("DoSending");
		send();	
	}
	private void send() {
		try {
			ServerSocket serverSocket = new ServerSocket(port);
			ServerMain.logger.WriteLine("Server is started");
			int i = 0;
			while(true) {
				Socket fromClient = serverSocket.accept();
				++i;
				ServerMain.logger.WriteLine("Connection " + i);
				OutputStream os = fromClient.getOutputStream();
				String text = x + ", " + y + ", " + z;
				os.write(text.getBytes());
				ServerMain.logger.WriteLine("Text was sent!");
				fromClient.close();
			}
		} catch(Exception e) {
			ServerMain.logger.WriteLine( e.getMessage() );
		}
	}

	private int port; // = 12346;
	private int x;
	private int y;
	private int z;
}
